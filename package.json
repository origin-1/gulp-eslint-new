{
	"name": "gulp-eslint-new",
	"version": "1.0.0",
	"description": "A gulp plugin to lint code with ESLint 8",
	"repository": "fasttime/gulp-eslint-new",
	"files": [
		"index.d.ts",
		"index.js",
		"util.js"
	],
	"directories": {
		"example": "example",
		"test": "test"
	},
	"scripts": {
		"build": "npm install && gulp",
		"coverage": "c8 --reporter=html --reporter=text-summary npm test",
		"lint": "eslint .",
		"test": "mocha --check-leaks test/*.spec.js"
	},
	"keywords": [
		"gulpplugin",
		"eslint",
		"gulp",
		"errors",
		"warnings",
		"check",
		"source",
		"code",
		"formatter",
		"js",
		"javascript",
		"task",
		"lint",
		"plugin"
	],
	"author": "Adametry",
	"contributors": [
		"Shinnosuke Watanabe <snnskwtnb@gmail.com> (https://github.com/shinnn)"
	],
	"license": "MIT",
	"dependencies": {
		"@types/eslint": "^8.2.0",
		"@types/node": "^16.11.10",
		"eslint": "^8.3.0",
		"fancy-log": "^1.3.3",
		"plugin-error": "^1.0.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"c8": "^7.10.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-node": "^11.1.0",
		"gulp": "^4.0.2",
		"mocha": "^9.1.3",
		"typescript": "^4.5.2",
		"vinyl": "^2.2.1"
	},
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"types": "index.d.ts"
}
